{
  "manifest_version": 3,
  "name": "Buzz Board",
  "version": "1.0",
  "description": "A digital notice board with Google Slide integration and Pomodoro Timer.",
  "permissions": ["activeTab", "topSites"],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "192": "icons/icon192.png",
      "512": "icons/icon512.png"
    }
  }
}
